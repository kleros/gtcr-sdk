{
  "name": "@kleros/gtcr-sdk",
  "version": "0.1.0",
  "description": "Read and write to/from Generalized TCRs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Kleros",
  "license": "MIT",
  "private": false,
  "repository": "git+https://github.com/kleros/gtcr-sdk",
  "scripts": {
    "build": "tsc",
    "lint": "eslint '*/**/*.{js,ts}' --quiet --fix && tsc --noEmit",
    "test": "cross-env TS_NODE_FILES=true mocha --exit --require ts-node/register --colors test/**/*.ts",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@types/bn.js": "^4.11.6",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "ganache-cli": "^6.9.1",
    "husky": "^4.2.5",
    "ipfs": "^0.47.0",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "standard-version": "^8.0.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@kleros/gtcr-encoder": "^1.0.1",
    "@kleros/tcr": "^1.8.1-alpha.0",
    "bn.js": "^5.1.2",
    "ethers": "^5.0.3",
    "rlp": "^2.2.5"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
